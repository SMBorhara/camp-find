<% layout('layouts/boilerplate.ejs')%>
<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
	<div>
		<label for="title">Title</label>
		<input
			type="text"
			id="title"
			name="campground[title]"
			value="<%= campground.title%>"
		/>
		<label for="location">Location</label>
		<input
			type="text"
			name="campground[location]"
			id="location"
			value="<%= campground.location%>"
		/>
	</div>
	<button>Update Campground</button>
</form>
<a href="/campgrounds/<%= campground._id%>">Back to Campground Info</a>

<div class="row">
	<h1 class="text-center">Edit Campground Info</h1>
	<div class="col-6 offset-3">
		<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="title"
					value="<%= campground.title%>"
				/>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					class="form-control"
					type="text"
					name="location"
					id="location"
					value="<%= campground.location%>"
				/>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea
					class="form-control"
					type="text"
					name="description"
					id="description"
					value="<%= campground.description%>"
				></textarea>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Daily Price</label>
				<div class="input-group flex-nowrap">
					<span class="input-group-text" id="price">$</span>
					<input
						type="text"
						class="form-control"
						name="price"
						placeholder="0"
						aria-label="price"
						aria-describedby="price-label"
						value="<%= campground.price%>"
					/>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input
					class="form-control"
					type="text"
					name="image"
					id="image"
					value="<%= campground.image%>"
				/>
			</div>
			<div class="mb-3">
				<button class="btn btn-info">Update</button>
			</div>
		</form>
		<a href="/campgrounds">All Campgrounds</a>
	</div>
</div>
