<% layout('layouts/boilerplate.ejs')%>
<div class="row">
	<h1 class="text-center">Add New Campground</h1>
	<div class="col-6 offset-3">
		<form action="/campgrounds" method="POST" novalidate class="validated-form">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					id="title"
					name="campground[title]"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Location</label>
				<input
					class="form-control"
					type="text"
					name="campground[location]"
					id="location"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Description</label>
				<textarea
					class="form-control"
					type="text"
					name="campground[description]"
					id="description"
					required
				></textarea>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Daily Price</label>
				<div class="input-group flex-nowrap">
					<span class="input-group-text" id="price">$</span>
					<input
						type="text"
						class="form-control"
						name="campground[price]"
						placeholder="0"
						aria-label="price"
						aria-describedby="price-label"
						required
					/>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="image">Image Url</label>
				<input
					class="form-control"
					type="text"
					name="campground[image]"
					id="image"
					required
				/>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<button class="btn btn-info">Add Campground</button>
			</div>
		</form>
		<a href="/campgrounds">All Campgrounds</a>
	</div>
</div>
